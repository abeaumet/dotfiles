# force color
--color
# enable smart case search (vim style)
--smart-case
# follow symbolic links
--follow

# ignore some directories
--ignore-dir=bower_components
--ignore-dir=node_modules

# add custom types support
--type-set=csv=.csv
--type-set=json=.json
--type-set=markdown=.markdown,.mdown,.mkdn,.md,.mkd,.mdwn,.mdtxt,.mdtext
